{
    "rewrites": [
        {
            "source": "/:path((?!vi/).*)",
            "has": [
                {
                    "type": "header",
                    "key": "accept-language",
                    "value": "vi"
                }
            ],
            "destination": "/vi/:path"
        },
        {
            "source": "/:path((?!en/).*)",
            "has": [
                {
                    "type": "header",
                    "key": "accept-language",
                    "value": "en"
                }
            ],
            "destination": "/en/:path"
        }
    ]
}